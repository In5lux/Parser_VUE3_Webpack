html(lang="ru")
  head
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(charset="utf-8")
    meta(name="x-apple-disable-message-reformatting")
    meta(content="telephone=no" name="format-detection")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet")
    style(type="text/css")
      include ../public/mail.css
  body   
    if items       
      each item in items            
        div
          h1(style="font-size: 16px") #{item.customer}
          p #{item.number}
          if item.type
            p <b>Тип закупки:</b> #{item.type}
          p <b>Описание:</b> #{item.description}
          if item.price
            p <b>Цена:</b> #{item.price}
          p <b>Дата публикации:</b> #{item.published}
          p <b>Дата окончания:</b> #{item.end}
          if item.securing_requisition
            p <b>Обеспечение заявки:</b> #{item.securing_requisition}
          if item.securing_contract
            p <b>Обеспечение договора:</b> #{item.securing_contract}
          button.btn
            a(href=item.link target="_blank") Подробнее  
          if item.documents
            button.btn
              a(href=item.documents target="_blank") Документы          